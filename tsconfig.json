{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "ES2015",
      "DOM"
    ],
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "removeComments": true,
    "moduleResolution": "node"
  },
  "files": [
    "src/index.ts",
    "src/serverSideTranslations.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}